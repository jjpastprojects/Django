{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": [
      "@types/graphql",
      "@types/node",
      "@types/commander",
      "@types/glob",
      "@types/minimatch",
      "@types/request",
      "@types/form-data",
      "@types/mkdirp",
      "@types/common-tags"
    ]
  },
  "files": [
    "src/index.ts",
    "src/cli/gql-gen.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
